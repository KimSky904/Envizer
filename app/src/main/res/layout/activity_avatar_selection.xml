<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic"
    tools:context=".AvatarSelection">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/button_bar"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <!-- exit button -->
        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_exit"/>

        <!-- point button -->
        <Button
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_points"
            android:text="points"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/btn_exit"
            android:background="@drawable/btn_point_style"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- High Level Linear (Vertical) -->
    <LinearLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- 1. Low Level Linear ( Horizontal ) -->
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Each Avatars -->
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/avatars01"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/avatars02"/>
        </LinearLayout>
        <!-- 2. Low Level Linear ( Horizontal ) -->
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Each Avatars -->
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/avatars03"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/avatars04"/>
        </LinearLayout>
        <!-- 3. Low Level Linear ( Horizontal ) -->
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Each Avatars -->
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/avatars05"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/avatars06"/>
        </LinearLayout>
        <!-- 1. Low Level Linear ( Horizontal ) -->
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Each Avatars -->
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/avatars07"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/avatars08"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>